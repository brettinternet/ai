{
  "mcpServers": {
    "context7": {
      "command": "context7-mcp"
    },
    "sequentialthinking": {
      "command": "mcp-server-sequential-thinking"
    },
    "playwright": {
      "command": "mcp-server-playwright"
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "."]
    },
    "filesystem": {
      "command": "mcp-server-filesystem",
      "args": ["."]
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    }
  }
}
