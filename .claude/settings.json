{
  "permissions": {
    "allow": [
      "Bash(docker run:*)",
      "Bash(docker build:*)",
      "Bash(find:*)",
      "Bash(task:*)",
      "WebFetch(domain:*)",
      "mcp__filesystem",
      "mcp__sequentialthinking",
      "mcp__serena"
    ]
  },
  "enabledMcpjsonServers": [
    "zen",
    "context7",
    "sequentialthinking",
    "playwright",
    "serena",
    "git",
    "filesystem",
    "fetch"
  ],
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "task hooks:notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "task hooks:stop"
          }
        ]
      }
    ]
  }
}
